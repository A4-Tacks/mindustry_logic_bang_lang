        =>? Meta::build_sets([l, r], vars, values).map_err(|e| e.into()),
    OpExpr,
    Print,
    <args:Args1> LEnd => {
        LogicLine::Other(args)
    },
}

Print: LogicLine = "print" <Args0> LEnd => {
        if <>.is_empty() {
            // 无参数, 啥也不做
            return LogicLine::Ignore
        }
        if <>.len() == 1 {
            // 单个参数, 老式处理
            return LogicLine::Other(vec![
                ReprVar("print".into()),
                <>.into_iter().next().unwrap()
            ])
        }
        Expand(
            <>.into_iter()
                .map(|arg| LogicLine::Other(vec![
                    ReprVar("print".into()),
                    arg
                ]))
                .collect()
        ).into()
};

