{
    "name": "mdtlbl",
    "displayName": "mdtlbl",
    "description": "Mindustry Logic Bang Lang syntax highlight for VSCode",
    "version": "1.0.15",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": ["onLanguage:mdtlbl"],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "mdtlbl",
                "aliases": [
                    "MindustryLogicBangLang",
                    "mdtlbl"
                ],
                "extensions": [
                    ".mdtlbl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mdtlbl",
                "scopeName": "source.mdtlbl",
                "path": "./syntaxes/mdtlbl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "mdtlbl",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "devDependencies": {
        "@types/node": "^22",
        "@types/vscode": "^1.80.0"
    },
    "repository": "https://github.com/A4-Tacks/mindustry_logic_bang_lang"
}
